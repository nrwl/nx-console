{
  "name": "vscode",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/vscode/src",
  "projectType": "application",
  "prefix": "vscode",
  "generators": {},
  "implicitDependencies": ["generate-ui", "nxls"],
  "targets": {
    "watch-all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "yarn nx run vscode:watch",
            "prefix": "vscode",
            "color": "blue"
          },
          {
            "command": "yarn nx run generate-ui:watch",
            "prefix": "generate-ui",
            "color": "green"
          },
          {
            "command": "yarn nx run nxls:watch",
            "prefix": "lsp",
            "color": "magenta"
          },
          {
            "command": "yarn nx run vscode-nx-cloud-view:watch-webview-files",
            "prefix": "cloud-view",
            "color": "yellow"
          }
        ],
        "parallel": true
      }
    },
    "watch": {
      "executor": "@nrwl/esbuild:esbuild",
      "options": {
        "watch": true,
        "external": [
          "vscode",
          "typescript",
          "@swc/core",
          "fsevents",
          "ts-node",
          "pnpapi",
          "@angular-devkit/*"
        ],
        "bundle": true,
        "thirdParty": true,
        "sourcemap": true,
        "outputPath": "dist/apps/vscode",
        "skipTypeCheck": false,
        "outputFileName": "main.js",
        "format": ["cjs"],
        "main": "apps/vscode/src/main.ts",
        "tsConfig": "apps/vscode/tsconfig.app.json",
        "assets": [
          {
            "glob": "nx-schema.json",
            "input": "apps/vscode/src",
            "output": "/"
          },
          {
            "glob": "tree-view-icon.svg",
            "input": "apps/vscode/src",
            "output": "/"
          },
          {
            "glob": "**/*",
            "input": "apps/vscode/src/assets",
            "output": "/assets"
          },
          {
            "glob": "**/*",
            "input": "apps/vscode/src/getting-started",
            "output": "/getting-started"
          }
        ],
        "deleteOutputPath": false,
        "generatePackageJson": false,
        "platform": "node",
        "esbuildOptions": {
          "mainFields": ["module", "main"],
          "sourcemap": "both",
          "outExtension": { ".js": ".js" }
        }
      }
    },
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "options": {
        "external": [
          "vscode",
          "typescript",
          "@swc/core",
          "fsevents",
          "ts-node",
          "pnpapi",
          "@nrwl/devkit",
          "webpack",
          "@angular-devkit/*"
        ],
        "bundle": true,
        "thirdParty": true,
        "sourcemap": true,
        "outputPath": "dist/apps/vscode",
        "outputFileName": "main.js",
        "format": ["cjs"],
        "main": "apps/vscode/src/main.ts",
        "tsConfig": "apps/vscode/tsconfig.app.json",
        "generatePackageJson": false,
        "assets": [
          {
            "glob": "nx-schema.json",
            "input": "apps/vscode/src",
            "output": "/"
          },
          {
            "glob": "tree-view-icon.svg",
            "input": "apps/vscode/src",
            "output": "/"
          },
          {
            "glob": "**/*",
            "input": "apps/vscode/src/assets",
            "output": "/assets"
          },
          {
            "glob": "**/*",
            "input": "apps/vscode/src/getting-started",
            "output": "/getting-started"
          }
        ],
        "deleteOutputPath": false,
        "platform": "node",
        "esbuildOptions": {
          "mainFields": ["module", "main"],
          "sourcemap": "both",
          "outExtension": { ".js": ".js" }
        }
      },
      "configurations": {
        "ci": {
          "optimization": false
        },
        "production": {
          "minify": true,
          "skipTypeCheck": true
        }
      },
      "dependsOn": ["^build", "^build-webview-files", "extract-dependencies"],
      "outputs": ["{options.outputPath}"]
    },
    "extract-dependencies": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./tools/scripts/copy-to-vscode.js"
      },
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/vscode/**/*.ts"]
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "^build"],
      "options": {
        "commands": [
          "node ./tools/scripts/vscode-yarn.js",
          "node ./tools/scripts/vscode-vsce.js"
        ],
        "parallel": false
      },
      "outputs": ["{workspaceRoot}/dist/apps/vscode"]
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "packageJsonDir": "apps/vscode/src",
        "commitMessage": "chore(release-${PROJECT_NAME}): ${nextRelease.version}"
      }
    }
  },
  "tags": ["type:vscode"]
}
