{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nxls/src",
  "projectType": "application",
  "targets": {
    "watch": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/vscode/lsp",
        "main": "apps/nxls/src/main.ts",
        "tsConfig": "apps/nxls/tsconfig.app.json",
        "assets": ["apps/nxls/src/assets"],
        "watch": true
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/vscode/lsp",
        "main": "apps/nxls/src/main.ts",
        "tsConfig": "apps/nxls/tsconfig.app.json",
        "assets": ["apps/nxls/src/assets"]
      },
      "configurations": {
        "package": {
          "outputPath": "dist/packages/nxls",
          "generatePackageJson": true,
          "externalDependencies": "all",
          "optimization": true,
          "extractLicenses": true
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/nxls/src/environments/environment.ts",
              "with": "apps/nxls/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "nxls:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/nxls/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/nxls"],
      "options": {
        "jestConfig": "apps/nxls/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
