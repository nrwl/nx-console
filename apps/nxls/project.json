{
  "name": "nxls",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nxls/src",
  "projectType": "application",
  "targets": {
    "watch": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/vscode/nxls",
        "main": "apps/nxls/src/main.ts",
        "tsConfig": "apps/nxls/tsconfig.app.json",
        "assets": ["apps/nxls/src/assets"],
        "sourcemap": true,
        "watch": true,
        "skipTypeCheck": false,
        "external": ["@swc/*", "@parcel/watcher", "nx", "webpack", "fsevents"],
        "outputFileName": "main.js",
        "format": ["cjs"],
        "platform": "node",
        "generatePackageJson": false,
        "esbuildOptions": {
          "mainFields": ["module", "main"],
          "sourcemap": true,
          "outExtension": { ".js": ".js" }
        }
      }
    },
    "package": {
      "executor": "@nrwl/webpack:webpack",
      "options": {
        "main": "apps/nxls/src/main.ts",
        "tsConfig": "apps/nxls/tsconfig.app.json",
        "outputPath": "dist/packages/nxls",
        "assets": [
          "apps/nxls/src/bin",
          {
            "glob": "README.md",
            "input": "./",
            "output": "/"
          }
        ],
        "generatePackageJson": true,
        "externalDependencies": "all",
        "target": "node",
        "optimization": true,
        "extractLicenses": true
      }
    },
    "build": {
      "defaultConfiguration": "production",
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{workspaceRoot}/dist/apps/nxls"],
      "options": {
        "main": "apps/nxls/src/main.ts",
        "tsConfig": "apps/nxls/tsconfig.app.json",
        "outputPath": "dist/apps/nxls",
        "skipTypeCheck": true,
        "external": [
          "@swc/*",
          "@angular-devkit/*",
          "@parcel/watcher",
          "webpack",
          "fsevents"
        ],
        "outputFileName": "main.js",
        "format": ["cjs"],
        "thirdParty": true,
        "platform": "node",
        "esbuildOptions": {
          "mainFields": ["module", "main"],
          "sourcemap": true,
          "loader": {
            ".node": "dataurl"
          },
          "logLevel": "error",
          "outExtension": { ".js": ".js" }
        }
      },
      "configurations": {
        "ci": {
          "skipTypeCheck": false
        },
        "production": {
          "minify": true,
          "skipTypeCheck": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/nxls/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/nxls"],
      "options": {
        "jestConfig": "apps/nxls/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "nxls:package",
        "ci": false,
        "packageJsonDir": "apps/nxls",
        "outputPath": "dist/packages/nxls"
      }
    }
  },
  "tags": ["type:lsp"]
}
