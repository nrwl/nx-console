{
  "name": "nxls",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nxls/src",
  "projectType": "application",
  "targets": {
    "watch": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/vscode/nxls",
        "main": "apps/nxls/src/main.ts",
        "tsConfig": "apps/nxls/tsconfig.app.json",
        "assets": [
          "apps/nxls/src/assets"
        ],
        "sourcemap": true,
        "watch": true,
        "skipTypeCheck": false,
        "external": [
          "@swc/*",
          "@parcel/watcher",
          "nx",
          "webpack",
          "fsevents"
        ],
        "outputFileName": "main.js",
        "format": [
          "cjs"
        ],
        "platform": "node",
        "generatePackageJson": false,
        "esbuildOptions": {
          "mainFields": [
            "module",
            "main"
          ],
          "outExtension": {
            ".js": ".js"
          }
        },
        "thirdParty": true
      }
    },
    "package": {
      "executor": "@nx/webpack:webpack",
      "options": {
        "main": "apps/nxls/src/main.ts",
        "tsConfig": "apps/nxls/tsconfig.app.json",
        "outputPath": "dist/packages/nxls",
        "assets": [
          "apps/nxls/src/bin",
          {
            "glob": "README.md",
            "input": "./",
            "output": "/"
          }
        ],
        "generatePackageJson": true,
        "externalDependencies": "all",
        "target": "node",
        "optimization": true,
        "extractLicenses": true,
        "webpackConfig": "apps/nxls/webpack.config.js"
      }
    },
    "build": {
      "defaultConfiguration": "production",
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{workspaceRoot}/dist/apps/nxls"
      ],
      "options": {
        "main": "apps/nxls/src/main.ts",
        "tsConfig": "apps/nxls/tsconfig.app.json",
        "outputPath": "dist/apps/nxls",
        "skipTypeCheck": true,
        "external": [
          "@swc/*",
          "@angular-devkit/*",
          "@parcel/watcher",
          "@nx/nx*",
          "webpack",
          "fsevents"
        ],
        "target": "es2020",
        "outputFileName": "main.js",
        "format": [
          "cjs"
        ],
        "thirdParty": true,
        "platform": "node",
        "esbuildOptions": {
          "mainFields": [
            "module",
            "main"
          ],
          "loader": {
            ".node": "dataurl"
          },
          "logLevel": "error",
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "ci": {
          "skipTypeCheck": false
        },
        "debug": {
          "minify": false,
          "sourcemap": "both"
        },
        "production": {
          "minify": true,
          "skipTypeCheck": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "nxls:package",
        "ci": false,
        "packageJsonDir": "apps/nxls",
        "outputPath": "dist/packages/nxls"
      }
    }
  },
  "tags": [
    "type:lsp"
  ]
}