{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "intellij",
  "projectType": "application",
  "targets": {
    "runIde": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew :apps:intellij:runIde"
      }
    },
    "x-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew :apps:intellij:buildPlugin"
      },
      "configurations": {
        "production-intellij": {}
      },
      "defaultConfiguration": "production-intellij",
      "dependsOn": ["^build"]
    },
    "x-test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew :apps:intellij:test"
      }
    },
    "x-lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew :apps:intellij:runInspections"
      }
    }
  },
  "tags": [
    "type:intellij"
  ],
  "implicitDependencies": ["generate-ui"]
}
