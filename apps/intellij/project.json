{
  "name": "intellij",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "outputPath": "",
        "ci": false,
        "npm": false,
        "plugins": ["gradle-semantic-release-plugin"],
        "gitAssets": ["gradle.properties"],
        "writerOpts": {
          "headerPartial": "## {{#if isPatch~}} <small>\n  {{~/if~}} {{version}}\n  {{~#if title}} \"{{title}}\"\n  {{~/if~}}\n  {{~#if date}} ({{date}})\n  {{~/if~}}\n  {{~#if isPatch~}} </small>\n  {{~/if}}\n"
        }
      }
    },
    "buildPlugin": {
      "dependsOn": ["^build", "^build-webview-files"]
    },
    "runIde": {
      "cache": false
    },
    "prepareSandbox": {
      "dependsOn": [
        "^build",
        "^build-webview-files",
        "composedJar",
        "^jar",
        "initializeIntellijPlatformPlugin"
      ]
    },
    "test": {
      "options": {
        "includeDependsOnTasks": [
          ":intellij:instrumentTestCode",
          ":intellij:prepareTest",
          ":intellij:compileKotlin"
        ]
      }
    }
  },
  "tags": ["type:intellij"],
  "implicitDependencies": ["nxls", "generate-ui-v2", "shared-cloud-fix-webview"]
}
