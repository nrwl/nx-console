{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "esnext",
    "types": ["node"],
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "removeComments": true,
    "stripInternal": true,
    "target": "es2017",
    "typeRoots": ["../node_modules/@types"],
    "lib": ["dom", "es2017", "esnext.asynciterable"]
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}
