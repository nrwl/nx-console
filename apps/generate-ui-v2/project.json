{
  "name": "generate-ui-v2",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/generate-ui-v2/src",
  "projectType": "application",
  "targets": {
    "build": {
      "command": "npx tailwindcss -i dist/apps/generate-ui-v2/tailwind.css -o dist/apps/generate-ui-v2/output.css -c apps/generate-ui-v2/tailwind.config.js --content 'dist/apps/generate-ui-v2/*.{html,js}'",
      "dependsOn": ["extract-dependencies"]
    },
    "extract-dependencies": {
      "command": "node ./tools/scripts/copy-generate-ui-deps.mjs",
      "dependsOn": ["_build"]
    },
    "_build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/generate-ui-v2",
        "format": ["esm"],
        "bundle": true,
        "thirdParty": true,
        "minify": true,
        "main": "apps/generate-ui-v2/src/main.ts",
        "tsConfig": "apps/generate-ui-v2/tsconfig.app.json",
        "assets": [
          "apps/generate-ui-v2/src/assets",
          {
            "input": "apps/generate-ui-v2/src",
            "glob": "*.css",
            "output": "/"
          }
        ],
        "esbuildOptions": {
          "sourcemap": false,
          "outExtension": {
            ".js": ".js"
          }
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/generate-ui-v2/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/generate-ui-v2/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": ["type:generate-ui"]
}
