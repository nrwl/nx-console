{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@nxui/*": [
        "libs/*"
      ],
      "@nxui/feature-workspaces": [
        "libs/feature-workspaces/src/index.ts"
      ],
      "@nxui/feature-addons": [
        "libs/feature-addons/src/index.ts"
      ],
      "@nxui/feature-generate": [
        "libs/feature-generate/src/index.ts"
      ],
      "@nxui/utils": [
        "libs/utils/src/index.ts"
      ],
      "@nxui/feature-run": [
        "libs/feature-run/src/index.ts"
      ],
      "@nxui/ui": [
        "libs/ui/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
